<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/comment_icon_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_default_rect_angle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ueser_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_user_name"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/user_loaction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ueser_name_tv"
                android:layout_marginTop="5dp"
                android:text="北京市"
                android:textColor="@color/colorTextGrey"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/comment_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/user_loaction_tv"
                android:layout_below="@id/ueser_name_tv"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/user_loaction_tv"
                android:text="17个小时之前"
                android:textColor="@color/colorTextGrey"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/zan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/zan1_pgnews"
                android:textColor="@color/colorTextGrey"/>
            <TextView
                android:id="@+id/comment_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/zan_iv"
                android:text="377顶"
                android:textColor="@color/colorTextGrey"
                android:textSize="13sp"/>
        </RelativeLayout>

        <com.burning.iplay.view.FloorView
            android:id="@+id/floor_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/main_comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="123333333333"
            android:textColor="@color/colorTextTitle"/>

    </LinearLayout>
</LinearLayout>