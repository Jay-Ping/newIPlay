<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/colorWhite">

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_forumhot_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fourmhot"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_subtitleOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="洛洛咯爱玩直播间来啦！"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_subtitleTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_subtitleOne"
                        android:text="Switch驾到！爱玩美女小编直播舔卡带"
                        android:textSize="16dp"/>


                </LinearLayout>


            </RelativeLayout>


        </FrameLayout>


    </HorizontalScrollView>


</android.support.v7.widget.CardView>