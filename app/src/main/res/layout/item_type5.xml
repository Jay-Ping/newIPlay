<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    style="@style/item_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="94dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@id/news_item_content"
            style="@style/item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="130dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="123123123123123123123123123"/>

        <TextView
            android:id="@+id/type5_comment_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/item_comment"
            android:drawablePadding="5dp"
            android:text="ipipoioipoipoioipo"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/type5_game_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/type5_comment_count_tv"
            android:paddingLeft="10dp"
            android:text="ipipoioipoipoioipo"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/type5_iv"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/line_black"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <include layout="@layout/divider_line"/>

</LinearLayout>