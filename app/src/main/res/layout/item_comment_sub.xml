<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorSubCommentBg"
             android:padding="10dp">

    <RelativeLayout
        android:id="@+id/show_sub_floor_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sub_floor_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorTextGrey"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/sub_floor_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/sub_floor_num"
            android:singleLine="true"
            android:textColor="@color/colorTextGrey"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sub_floor_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_floor_username"
            android:textColor="@color/colorTextTitle"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/hide_text"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_centerInParent="true"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="点击展示隐藏楼层"/>


</FrameLayout>